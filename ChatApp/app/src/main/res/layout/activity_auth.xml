<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="@color/orange"
    tools:context=".activity_aut">

    <ImageView
        android:id="@+id/whatsapp_like_icon"
        android:src="@drawable/app_chat_logo_256"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/whatsapp_like_icon"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="A simple whatsapp like chat app" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text"
        android:paddingTop="15dp">

        <EditText
            android:id="@+id/input_server"
            android:layout_width="200dip"
            android:layout_height="30dip"
            android:layout_gravity="bottom"
            android:paddingStart="4dp"
            android:hint="Server"
            android:background="@color/grey"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:text="192.168.1.10" />

        <EditText
            android:id="@+id/input_port"
            android:layout_width="200dip"
            android:layout_height="30dip"
            android:layout_below="@id/input_server"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:paddingStart="4dp"
            android:hint="Port"
            android:background="@color/grey"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:text="50000" />

        <EditText
            android:id="@+id/input_nick"
            android:layout_width="200dip"
            android:layout_height="30dip"
            android:layout_below="@id/input_port"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:paddingStart="4dp"
            android:hint="Nick"
            android:background="@color/grey"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:text="" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/connect_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="Connect"
            android:shadowColor="@color/grey"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:background="@color/blue_tone" />
    </LinearLayout>

</RelativeLayout>


